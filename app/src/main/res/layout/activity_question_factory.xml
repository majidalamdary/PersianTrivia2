<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.sputa.persiantrivia.Question_factory"
    android:background="@drawable/bg">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lay_main">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:weightSum="1">

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="کارخانه سوال"
                    android:id="@+id/lbl_setting"
                    android:textColor="#000000"
                    android:layout_weight="0.25"
                    android:textAlignment="center"
                    android:layout_margin="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:visibility="gone">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="270dp"
                    android:gravity="center"
                    android:layout_height="60dp"
                    android:background="@drawable/white_btn"
                    android:id="@+id/btn_subject1"
                    android:clickable="true">

                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:background="@drawable/green_btn"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginBottom="1dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:id="@+id/relativeLayout"
                        android:onClick="clk_subject1">

                        <TextView
                            android:id="@+id/txt_btn_subject1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_centerVertical="true"
                            android:text="شروع بازی"
                            android:textColor="#000000" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:visibility="visible" >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="270dp"
                    android:gravity="center"
                    android:layout_height="60dp"
                    android:background="@drawable/white_btn"
                    android:id="@+id/btn_new_question" >

                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:background="@drawable/blue_btn"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginBottom="1dp"
                        android:onClick="clk_new_question"
                        android:clickable="true"
                        android:gravity="center"
                        android:id="@+id/relativeLayout6" >

                        <TextView
                            android:id="@+id/lbl_new_question"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_centerVertical="true"
                            android:text="سوال جدید"
                            android:textColor="#000000" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:visibility="visible" >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="270dp"
                    android:gravity="center"
                    android:layout_height="60dp"
                    android:background="@drawable/white_btn"
                    android:id="@+id/btn_unconfirmed_question"
                    android:onClick="clk_unconfirmed"
                    android:clickable="true">

                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:background="@drawable/blue_btn"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginBottom="1dp"

                        android:clickable="true"
                        android:gravity="center"
                        android:id="@+id/relativeLayout5"
                        android:onClick="clk_unconfirmed">

                        <TextView
                            android:id="@+id/lvl_unconfirmed_question"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_centerVertical="true"
                            android:text="سوالات ثبت شده"
                            android:textColor="#000000" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:visibility="visible" >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="270dp"
                    android:gravity="center"
                    android:layout_height="60dp"
                    android:background="@drawable/white_btn"
                    android:id="@+id/btn_confirmed_question"
                    android:clickable="true">

                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:background="@drawable/blue_btn"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginBottom="1dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:id="@+id/relativeLayout4"
                        android:onClick="clk_confirmed">

                        <TextView
                            android:id="@+id/lbl_confired_question"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_centerVertical="true"
                            android:text="سوالات تائید شده"
                            android:textColor="#000000" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:visibility="visible">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="270dp"
                    android:gravity="center"
                    android:layout_height="60dp"
                    android:background="@drawable/white_btn"
                    android:id="@+id/btn_rejected_question"
                    android:clickable="true"
                    android:nestedScrollingEnabled="false">

                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:background="@drawable/blue_btn"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginBottom="1dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:id="@+id/relativeLayout2"
                        android:onClick="clk_rejected">

                        <TextView
                            android:id="@+id/lbl_rejected_question"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_centerVertical="true"
                            android:text="سوالات رد شده"
                            android:textColor="#000000" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="270dp"
                    android:gravity="center"
                    android:layout_height="60dp"
                    android:background="@drawable/white_btn"
                    android:id="@+id/btn_return">

                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:background="@drawable/blue_btn"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginBottom="1dp"
                        android:onClick="clk_back"
                        android:clickable="true"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/lbl_return"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_centerVertical="true"
                            android:text="برگشت"
                            android:textColor="#000000" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="به ازای هر سوال تائید شده 50 سکه دریافت خواهید کرد."
                    android:id="@+id/txt_describ"
                    android:textColor="#ff0000"
                    android:layout_weight="0.25"
                    android:textAlignment="center"
                    android:layout_margin="10dp" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>






    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f6000000"
        android:id="@+id/lay_wait"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:id="@+id/circle1"
            android:background="@drawable/refresh"
            android:clickable="false"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="183dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txt_wait_message"
            android:textColor="#ffffff"
            android:layout_below="@+id/circle1"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#70000000"
        android:id="@+id/lay_message"
        android:visibility="gone" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/white_btn"
            android:padding="1dp"
            android:id="@+id/lay_inner_message"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/green_light_btn"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="خروج"
                    android:layout_gravity="center"
                    android:id="@+id/txt_msg_title"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_gravity="center"
                    android:text="آیا می خواهید خارج شوید؟"
                    android:id="@+id/txt_msg_text"
                    android:textColor="#000000"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:id="@+id/lay_msg_btn_container">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/btn_msg1"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_weight="1"
                        android:background="@drawable/message_button"
                        android:layout_marginRight="3dp"
                        android:textColor="#ffffff"
                        android:onClick="clk_btn_msg1" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:background="@drawable/message_button"
                        android:id="@+id/btn_msg2"
                        android:layout_weight="1"
                        android:layout_marginRight="3dp"
                        android:textColor="#ffffff"
                        android:visibility="visible"
                        android:onClick="clk_btn_msg1" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:background="@drawable/message_button"
                        android:id="@+id/btn_msg3"
                        android:layout_weight="1"
                        android:layout_marginRight="3dp"
                        android:textColor="#ffffff"
                        android:onClick="clk_btn_msg1" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>
