<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="horizontal" >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="3dp"
        android:paddingLeft="11dp"
        android:paddingRight="11dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"

            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:padding="1dp"
            android:background="@drawable/white_btn">

            <LinearLayout
                android:background="@drawable/green_light_btn"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:id="@+id/lay_main">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5">

                    <LinearLayout
                        android:layoutDirection="rtl"
                        android:orientation="vertical"
                        android:layout_width="match_parent"

                        android:layout_height="match_parent"
                        android:layout_weight="5">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.4">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="نام رقیب : "
                                android:id="@+id/lbl_rival_name"
                                android:textColor="#000000"
                                android:textSize="18dp"
                                android:layout_marginRight="10dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:gravity="center"
                            android:layout_weight="1.5">

                            <TextView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="majid102030"
                                android:id="@+id/lbl_name"
                                android:textColor="#000000"
                                android:textSize="20dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:gravity="left"
                            android:layout_weight="1"
                            android:weightSum="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="زمان باقیمانده : 5 ساعت"
                                android:id="@+id/lbl_desc"
                                android:textColor="#000000"
                                android:textSize="15dp" />
                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/img_game_result"
                        android:background="@drawable/lost"
                        android:visibility="invisible" />
                </RelativeLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:layout_weight="1.6">
                    <RelativeLayout
                        android:orientation="vertical"
                        android:layout_width="70dp"
                        android:layout_height="60dp"

                        android:layoutDirection="rtl"
                        android:id="@+id/lay_profile"
                        android:background="@drawable/layout_border">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/img_avatar" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/circle_green"
                            android:id="@+id/linearLayout">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="10"
                                android:id="@+id/lbl_level"
                                android:textSize="10dp" />
                        </LinearLayout>

                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>